<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <TextView
        android:id="@+id/text_process_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="@string/filler_process_name"
        android:textAppearance="@style/Text.Default"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_process_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_process_name"
        android:layout_marginLeft="10dp"
        android:text="@string/filler_class" />

    <TextView
        android:id="@+id/label_process_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/text_process_type"
        android:layout_alignBaseline="@+id/text_process_type"
        android:layout_marginRight="5dp"
        android:text="@string/label_type"
        android:textAppearance="@style/Text.Label" />

    <TextView
        android:id="@+id/text_process_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:text="@string/filler_type"
        android:textAppearance="@style/Text.Default" />

</RelativeLayout>